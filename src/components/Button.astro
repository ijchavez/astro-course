---
const btnVarieties = {
  default: 'btn--default',
  icon: 'btn--icon',
};
const {
  classes,
  variety = 'default',
  isBordered,
  background = 'hsl(130, 50%, 50%)',
  color = 'hsl(0, 0%, 0)',
  ...rest
} = Astro.props;
---

<button
  class:list={['btn', classes, btnVarieties[variety], { border: isBordered }]}
  {...rest}
>
  <slot />
</button>
<style
  define:vars={{
    background,
    color,
  }}
>
  .btn {
    color: var(--color);
    text-align: center;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
    background: var(--background);
  }
  .btn--default {
    padding: 15px 32px;
  }
  .btn--icon {
    aspect-ratio: 1/1;
    background-color: pink;
  }
  .border {
    border: 1px solid red;
  }
</style>
