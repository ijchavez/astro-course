---
import "../styles/card.css"
const { img, alt, pill, title, description, author_img, author_name, time } = Astro.props
---

<article>
    <img src={img} alt={alt} />
    <p class="pill">{pill}</p>
    <h2>{title}</h2>
    <p>{description}</p>
    <div class="auth">
        <img src={author_img} alt={author_name}>
        <div>
            <p><strong>{author_name}</strong></p>
            <p>{time}</p>
        </div>
    </div>
</article>
